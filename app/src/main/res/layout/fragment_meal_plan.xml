<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.darrenfinch.mymealplanner.model.data.entitysubdata.MacroType" />
        <import type="com.darrenfinch.mymealplanner.common.utils.StringUtils"/>

        <variable
            name="mealPlanMacros"
            type="com.darrenfinch.mymealplanner.model.data.structs.MealPlanMacros" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".domain.mealplan.controller.MealPlanFragment">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/meal_plans" />

        <LinearLayout
            android:id="@+id/totalCaloriesLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <TextView
                android:id="@+id/caloriesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-black"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="@{StringUtils.INSTANCE.makeTotalVsRequiredNutrientString(mealPlanMacros.totalCalories, mealPlanMacros.requiredCalories, MacroType.CALORIE, false)}"
                android:textAppearance="?attr/textAppearanceHeadline4"
                tools:text="1850/2200 Calories"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/caloriesProgressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:max="@{mealPlanMacros.requiredCalories}"
                android:progress="@{mealPlanMacros.totalCalories}" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/totalCarbohydratesLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/totalFatsLayout"
            app:layout_constraintTop_toBottomOf="@+id/totalCaloriesLayout">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:max="@{mealPlanMacros.requiredCarbohydrates}"
                android:progress="@{mealPlanMacros.totalCarbohydrates}" />

            <TextView
                android:id="@+id/carbsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:foregroundGravity="center_vertical"
                android:text="@{StringUtils.INSTANCE.makeTotalVsRequiredNutrientString(mealPlanMacros.totalCarbohydrates, mealPlanMacros.requiredCarbohydrates, MacroType.CARBOHYDRATE, true)}"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                tools:text="154/300 Carbs"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/totalFatsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/totalCarbohydratesLayout"
            app:layout_constraintStart_toEndOf="@+id/totalProteinLayout"
            app:layout_constraintTop_toBottomOf="@+id/totalCaloriesLayout">

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:max="@{mealPlanMacros.requiredFat}"
                android:progress="@{mealPlanMacros.totalFat}" />

            <TextView
                android:id="@+id/fatsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:foregroundGravity="center_vertical"
                android:text="@{StringUtils.INSTANCE.makeTotalVsRequiredNutrientString(mealPlanMacros.totalFat, mealPlanMacros.requiredFat, MacroType.FAT, true)}"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                tools:text="33/60 Fat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/totalProteinLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/totalFatsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totalCaloriesLayout">

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:max="@{mealPlanMacros.requiredProtein}"
                android:progress="@{mealPlanMacros.totalProtein}" />

            <TextView
                android:id="@+id/proteinsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:foregroundGravity="center_vertical"
                android:text="@{StringUtils.INSTANCE.makeTotalVsRequiredNutrientString(mealPlanMacros.totalProtein, mealPlanMacros.requiredProtein, MacroType.PROTEIN, true)}"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                tools:text="145/200 Carbs" />
        </LinearLayout>

        <TextView
            android:id="@+id/noMealPlanMeals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_meal_plan_meals"
            app:layout_constraintBottom_toBottomOf="@+id/mealPlanMealsRecyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mealPlanMealsRecyclerView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mealPlanMealsRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totalFatsLayout" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addNewMealPlanMealFAB"
            android:layout_margin="@dimen/standard_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
