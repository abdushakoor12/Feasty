<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/monda</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="textInputStyle">@style/AppTheme.TextInputStyle</item>
    </style>

    <style name="AppTheme.DefaultButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">#FFF</item>
    </style>

    <style name="AppTheme.ToolbarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/colorTextPrimaryLight</item>
        <item name="android:textColor">@color/colorTextPrimaryLight</item>
    </style>

    <style name="H1" parent="H2">
        <item name="font">@font/monda</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="H2" parent="TextAppearance.AppCompat.Large">
        <item name="font">@font/monda</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="H3" parent="TextAppearance.AppCompat.Medium">
        <item name="font">@font/monda</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="H4" parent="TextAppearance.AppCompat.Small">
        <item name="font">@font/monda</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

</resources>
